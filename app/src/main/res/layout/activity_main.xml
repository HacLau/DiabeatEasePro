<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rg"
            type="com.diabeat.ease.pro.databinding.RG" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-black"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="@{rg.titleList.get(rg.currentIndex)}"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="+"
            android:padding="0dp"
            android:textSize="38sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/rg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_btn_yellow"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/rg"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="@color/nav_color"
                android:checked="@{rg.currentIndex == 0}"
                android:text="@{rg.currentIndex == 0? rg.naviTitle.get(rg.currentIndex) : rg.naviTitle.get(4)}"
                android:drawableStart="@mipmap/ic_launcher" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="@color/nav_color"
                android:text="@{rg.currentIndex == 1? rg.naviTitle.get(rg.currentIndex) : rg.naviTitle.get(4)}"
                android:checked="@{rg.currentIndex == 1}"
                android:drawableStart="@mipmap/ic_launcher" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="@color/nav_color"
                android:text="@{rg.currentIndex == 2? rg.naviTitle.get(rg.currentIndex) : rg.naviTitle.get(4)}"
                android:checked="@{rg.currentIndex == 2}"
                android:drawableStart="@mipmap/ic_launcher" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="@color/nav_color"
                android:text="@{rg.currentIndex == 3? rg.naviTitle.get(rg.currentIndex) : rg.naviTitle.get(4)}"
                android:checked="@{rg.currentIndex == 3}"
                android:drawableStart="@mipmap/ic_launcher" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>